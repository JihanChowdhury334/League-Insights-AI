                  <PolarGrid stroke="#334155" />
                  <PolarAngleAxis dataKey="subject" stroke="#94a3b8" />
                  <PolarRadiusAxis angle={90} domain={[0, 100]} stroke="#94a3b8" />
                  <Radar 
                    name="Score" 
                    dataKey="value" 
                    stroke={COLORS.purple} 
                    fill={COLORS.purple} 
